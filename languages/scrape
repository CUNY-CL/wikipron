#!/bin/bash
# Script for downloading all languages en-masse.
#
# This does not exhaust the set of covered languages, merely those we have tried
# thus far.
#
# It seems that the MediaWiki backend may drop queries if too many are made at
# once; therefore we have to run this in serial.

set -eou pipefail

# TODO: Increment this from time to time.
readonly CUTOFFDATE=2019-07-15

# Add these in alphabetic order with respect to their ISO-639-1 codes.

echo "Bulgarian..."
time g2p 'bg' \
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output bg.tsv

echo "German..."
time g2p de \
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output de.tsv

echo "Greek..."
time g2p el \
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output el.tsv

echo "English (US)..."
time g2p en \
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --dialect="US | General American" \
    --cut-off-date="${CUTOFFDATE}" \
    --output en.tsv

echo "Spanish..."
time g2p es \
    --casefold \
    --no-stress \
    --dialect="Latin America" \
    --cut-off-date="${CUTOFFDATE}" \
    --output es.tsv

echo "French (European)..."
time g2p fr \
    --casefold \
    --no-syllable-boundaries \
    --dialect=European \
    --cut-off-date="${CUTOFFDATE}" \
    --output fr.tsv

echo "Hindi..."
time g2p hi \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output hi.tsv
    
echo "Hungarian..."
time g2p hu \
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output hu.tsv

echo "Korean..."
time g2p ko \
    --phonetic \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output ko.tsv
    

