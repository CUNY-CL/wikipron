#!/bin/bash
# Script for downloading all languages en-masse.
#
# This does not exhaust the set of covered languages, merely those we have tried
# thus far.
#
# It seems that the MediaWiki backend may drop queries if too many are made at
# once; therefore we have to run this in serial.

set -eou pipefail

# TODO: Increment this from time to time.
readonly CUTOFFDATE=2019-07-15

# Add these in alphabetic order with respect to their ISO-639-1 codes.

echo "Bulgarian..."
<<<<<<< HEAD
time wikipron bg \
=======
time g2p 'bg' \
>>>>>>> 93624ec128ef794bebd8540c339adece2de3f8ad
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output bg.tsv

echo "German..."
time wikipron de \
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output de.tsv

echo "Greek..."
<<<<<<< HEAD
time wikipron el \
=======
time g2p el \
>>>>>>> 93624ec128ef794bebd8540c339adece2de3f8ad
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output el.tsv

echo "English (US)..."
<<<<<<< HEAD
time wikipron en \
=======
time g2p en \
>>>>>>> 93624ec128ef794bebd8540c339adece2de3f8ad
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --dialect="US | General American" \
    --cut-off-date="${CUTOFFDATE}" \
    --output en.tsv

<<<<<<< HEAD
echo "Spanish (Latin America)..."
time wikipron es \
=======
echo "Spanish..."
time g2p es \
>>>>>>> 93624ec128ef794bebd8540c339adece2de3f8ad
    --casefold \
    --no-stress \
    --dialect="Latin America" \
    --cut-off-date="${CUTOFFDATE}" \
    --output es.tsv

echo "French (European)..."
time wikipron fr \
    --casefold \
    --no-syllable-boundaries \
    --dialect=European \
    --cut-off-date="${CUTOFFDATE}" \
    --output fr.tsv

echo "Hindi..."
<<<<<<< HEAD
time wikipron hi \
=======
time g2p hi \
>>>>>>> 93624ec128ef794bebd8540c339adece2de3f8ad
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output hi.tsv
    
echo "Hungarian..."
<<<<<<< HEAD
time wikipron hu \
=======
time g2p hu \
>>>>>>> 93624ec128ef794bebd8540c339adece2de3f8ad
    --casefold \
    --no-stress \
    --no-syllable-boundaries \
    --cut-off-date="${CUTOFFDATE}" \
    --output hu.tsv

echo "Korean..."
